<% if !@posts.empty? %>
  <%= content_tag :header, class: 'page-header' do %>
    <%= the_archive_title( '<h1 class="page-title" style="color:#0073aa">', '</h1>' ) %>
    <%= "The other category:" %>
    <%= link_to "Uncategorized", railspress_engine.category_posts_path(slug: 'uncategorized') %>
  <% end %>
  <% @posts.each do |post| %>
    <%= render partial: 'railspress/posts/content_excerpt', locals: {post: post} %>
  <% end %>
<% else %>
  <%= render partial: 'railspress/posts/content_none' %>
<% end %>

<%= content_tag :nav, class: 'navigation pagination', role: 'navigation' do %>
  <%= will_paginate @posts, class: 'nav-links', previous_label: t('railspress.post.index.newer'), next_label: t('railspress.post.index.older') %>
<% end %>
